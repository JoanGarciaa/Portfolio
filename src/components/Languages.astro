---
import Tailwind from "./icons/Tailwind.astro";
import Kotlin from "./icons/Kotlin.astro";
import Angular from "./icons/Angular.astro";
import Nodejs from "./icons/Nodejs.astro";
import Firebase from "./icons/Firebase.astro";
import GitHub from "./icons/GitHub.astro";
import HTML from "./icons/HTML.astro";
import CSS from "./icons/CSS.astro";
import Java from "./icons/Java.astro";
import MongoDB from "./icons/MongoDB.astro";
import Mysql from "./icons/Mysql.astro";
import Figma from "./icons/Figma.astro";
import Dart from "./icons/Dart.astro";
import AstroIcon from "./icons/AstroIcon.astro";
import Python from "./icons/Python.astro";
import Azure from "./icons/Azure.astro";
import Anaconda from "./icons/Anaconda.astro";
import Git from "./icons/Git.astro";
import Terminal from "./icons/Terminal.astro";
import VSCode from "./icons/VSCode.astro";
import Jupyter from "./icons/Jupyter.astro";


const { category: category } = Astro.props;

const LANGUAGES = {
    frontend: [
        {
            name: "HTML",
            icon: HTML,
        },
        {
            name: "CSS",
            icon: CSS,
        },
        {
            name: "Angular",
            icon: Angular,
        },
        {
            name: "Figma",
            icon: Figma,
        },
        {
            name: "Dart",
            icon: Dart,
        },
        {
            name: "Kotlin",
            icon: Kotlin,
        },
    ],

    backend: [
        {
            name: "Node.js",
            icon: Nodejs,
        },
        {
            name: "Java",
            icon: Java,
        },
        {
            name: "MongoDB",
            icon: MongoDB,
        },
        {
            name: "MYSQL",
            icon: Mysql,
        },
        {
            name: "Firebase",
            icon: Firebase,
        },
    ],
    aprendiendo: [
        {
            name: "Astro",
            icon: AstroIcon,
        },
        {
            name: "Python",
            icon: Python,
        },
        {
            name: "TailwindCSS",
            icon: Tailwind,
        },
        {
            name: "Azure",
            icon: Azure,
        },
        {
            name: "Anaconda",
            icon: Anaconda,
        },
    ],
    herramientas: [
        {
            name: "Git",
            icon: Git,
        },
        {
            name: "GitHub",
            icon: GitHub,
        },
        {
            name: "Terminal",
            icon: Terminal,
        },
        {
            name: "VSCode",
            icon: VSCode,
        },
        {
            name: "Jupyter",
            icon: Jupyter,
        },
    ],
};
---

{
    category === "frontend"
        ? LANGUAGES.frontend.map((language) => (
              <li class="rounded-2xl group flex flex-col fle justify-center items-center">
                  <language.icon class="size-12" />
                  <span class="text-sm w-full text-center">
                      {language.name}
                  </span>
              </li>
          ))
        : category == "backend"
          ? LANGUAGES.backend.map((language) => (
                <li class="rounded-2xl group flex flex-col fle justify-center items-center">
                    <language.icon class="size-12" />
                    <span class="text-sm w-full text-center">
                        {language.name}
                    </span>
                </li>
            ))
          : category == "aprendiendo"
            ? LANGUAGES.aprendiendo.map((language) => (
                  <li class="rounded-2xl group flex flex-col fle justify-center items-center">
                      <language.icon class="size-12" />
                      <span class="text-sm w-full text-center">
                          {language.name}
                      </span>
                  </li>
              ))
            : category == "herramientas"
              ? LANGUAGES.herramientas.map((language) => (
                    <li class="rounded-2xl group flex flex-col fle justify-center items-center">
                        <language.icon class="size-12" />
                        <span class="text-sm w-full text-center">
                            {language.name}
                        </span>
                    </li>
                ))
              : "Category not found"
}
